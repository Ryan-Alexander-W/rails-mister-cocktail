<style>
body {
  color: black;
  list-style: none;
}
ul {
  list-style: none;
}
h1 {
  color: purple;
}

</style>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">

      <h1>Amazing Cocktails of the World</h1>

      <ul>
        <% @cocktails.each do |cocktail| %>
        <li>
         <strong>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </strong>
      </li>
      <% end %>
    </ul>

  </div>
</div>
</div>
