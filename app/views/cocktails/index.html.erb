<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <h1>Our Cocktails</h1>
      <ul class="list-group">
        <% @cocktails.each do |cocktail| %>
        <li class="list-group-item">
         <strong>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </strong>
      </li>
      <% end %>

    </ul>
  </div>
</div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-danger" %>
    </div>
  </div>
</div>
